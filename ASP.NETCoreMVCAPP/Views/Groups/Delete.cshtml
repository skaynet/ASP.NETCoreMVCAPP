@model ASP.NETCoreMVCAPP.Models.Group

@{
    ViewData["Title"] = "Удалить группу";
}

<h1>Удалить группу</h1>
@{
    if (Model.Students.Count > 0)
    {
        <h3 style="color:red">Данную группу удалить нельля, так как она содержит студентов!</h3>
    }
    else
    {
        <h3>Вы уверенны что хотите удалить данную группу?</h3>
    }
}
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GroupId" />
        @{
            if (Model.Students.Count > 0)
            {
                <input type="submit" value="Удалить" class="btn btn-danger" disabled />
            }
            else
            {
                <input type="submit" value="Удалить" class="btn btn-danger" />
            }
        }
        | <a asp-action="Index">Назад к списку</a>
    </form>
</div>
